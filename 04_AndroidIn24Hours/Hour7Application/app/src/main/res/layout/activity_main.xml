<?xml version="1.0" encoding="utf-8"?>
<GridLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:rowCount="3"
        android:columnCount="3"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="0dp"
        tools:context="com.ggg.hour7application.MainActivity">

    <!-- ROW -->
    <TextView
            android:text="left top"
            android:gravity="left|top"
            android:background="#f44336"
            android:layout_row="0"
            android:layout_column="0"
            android:padding="10dp"
            android:textAppearance="@style/CellText"
            android:layout_gravity="fill"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_width="0dp"
            android:layout_height="0dp"/>
    <TextView
            android:text="center top"
            android:gravity="center|top"
            android:background="#e91e63"
            android:layout_row="0"
            android:layout_column="1"
            android:padding="10dp"
            android:textAppearance="@style/CellText"
            android:layout_gravity="fill"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_width="0dp"
            android:layout_height="0dp"/>
    <TextView
            android:text="right top"
            android:gravity="right|top"
            android:background="#9c27b0"
            android:layout_row="0"
            android:layout_column="2"
            android:padding="10dp"
            android:textAppearance="@style/CellText"
            android:layout_gravity="fill"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_width="0dp"
            android:layout_height="0dp"/>


    <!-- ROW -->
    <TextView
            android:text="left center"
            android:gravity="left|center"
            android:background="#2196f3"
            android:layout_row="1"
            android:layout_column="0"
            android:padding="10dp"
            android:textAppearance="@style/CellText"
            android:layout_gravity="fill"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_width="0dp"
            android:layout_height="0dp"/>
    <TextView
            android:text="center"
            android:gravity="center"
            android:background="#03a9f4"
            android:layout_row="1"
            android:layout_column="1"
            android:padding="10dp"
            android:textAppearance="@style/CellText"
            android:layout_gravity="fill"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_width="0dp"
            android:layout_height="0dp"/>
    <TextView
            android:text="right center"
            android:gravity="right|center"
            android:background="#00bcd4"
            android:layout_row="1"
            android:layout_column="2"
            android:padding="10dp"
            android:textAppearance="@style/CellText"
            android:layout_gravity="fill"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_width="0dp"
            android:layout_height="0dp"/>

    <!-- ROW -->
    <TextView
            android:text="left bottom"
            android:gravity="left|bottom"
            android:background="#4caf50"
            android:layout_row="2"
            android:layout_column="0"
            android:padding="10dp"
            android:textAppearance="@style/CellText"
            android:layout_gravity="fill"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_width="0dp"
            android:layout_height="0dp"/>
    <TextView
            android:text="center bottom"
            android:gravity="center|bottom"
            android:background="#8bc34a"
            android:layout_row="2"
            android:layout_column="1"
            android:padding="10dp"
            android:textAppearance="@style/CellText"
            android:layout_gravity="fill"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_width="0dp"
            android:layout_height="0dp"/>
    <TextView
            android:text="right bottom"
            android:gravity="right|bottom"
            android:background="#cddc39"
            android:layout_row="2"
            android:layout_column="2"
            android:padding="10dp"
            android:textAppearance="@style/CellText"
            android:layout_gravity="fill"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_width="0dp"
            android:layout_height="0dp"/>

</GridLayout>
