<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/windowBackground</item>
    </style>

    <!-- CARD -->
    <style name="CardTheme" parent="CardView.Light">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/view_gutter</item>
        <item name="android:layout_marginBottom">@dimen/view_gutter</item>
        <item name="cardCornerRadius">0dp</item>
    </style>

    <!-- TITLE -->
    <style name="TitleTheme" parent="TextAppearance.AppCompat.Title">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">@dimen/view_gutter</item>
        <item name="android:textSize">@dimen/title_text_size</item>
        <item name="android:textColor">@color/titleColor</item>
        <item name="android:background">@color/titleBackground</item>
    </style>

</resources>
