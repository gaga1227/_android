<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.ggg.hour13applicationtoolbar">

    <application
            android:allowBackup="true"
            android:icon="@mipmap/ic_launcher"
            android:label="@string/app_name"
            android:supportsRtl="true"
            android:theme="@style/AppTheme">

        <!-- MAIN -->
        <activity
                android:name="com.ggg.hour13applicationtoolbar.MainActivity"
                android:label="@string/title_activity_main"
                android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <!-- CHILD -->
        <activity
                android:name="com.ggg.hour13applicationtoolbar.ChildActivity"
                android:parentActivityName="com.ggg.hour13applicationtoolbar.MainActivity"
                android:theme="@style/AppTheme.NoActionBar">
        </activity>

    </application>

</manifest>
