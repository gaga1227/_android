<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.ggg.demos" >

    <uses-sdk
        android:minSdkVersion="15"
        android:targetSdkVersion="18" />

    <supports-screens
        android:largeScreens="true"
        android:normalScreens="true"
        android:smallScreens="false"
        android:xlargeScreens="true" />

    <android:uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <android:uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <android:uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Demo Activities -->
        <activity
            android:name=".D001SpinnerView"
            android:label="@string/demo_001_spinner_view"
            android:parentActivityName=".MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.ggg.demos.MainActivity" />
        </activity>
        <activity
            android:name=".D002ListViewChoicemode"
            android:label="@string/demo_002_list_view_choicemode"
            android:parentActivityName=".MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.ggg.demos.MainActivity" />
        </activity>
        <activity
            android:name=".D003GridView"
            android:label="@string/demo_003_grid_view"
            android:parentActivityName=".MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.ggg.demos.MainActivity" />
        </activity>
        <activity
            android:name=".D004AutoCompleteTextView"
            android:label="@string/demo_004_auto_complete_text_view"
            android:parentActivityName=".MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.ggg.demos.MainActivity" />
        </activity>
    </application>

</manifest>
